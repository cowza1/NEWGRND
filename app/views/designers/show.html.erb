<div class="designer-container row">
  <img src="<%=@designer.image%>">
  <div class="designer-info col-md-6">
    <h2><%=@designer.name%></h2>
    <p><%=@designer.description%></P>
  </div>
</div>

<div class="designer-product-container row">
  <%@designer.product.each do |p|%>
  <div class="designer-product-card col-md-6 col-sm-12 justify-content-center">
    <div class="designer-product-info">
    <%=link_to product_path(p) do %>
      <img src="<%=p.image%>" alt="">
      <% end %>
      <ul>
       <li><%=p.designer.name.upcase%></li>
       <li><%=p.name%></li>
       <li><%=humanized_money_with_symbol p.price%></li>
      </ul>
   </div>
  </div>
  <%end%>
</div>
